    <!--启用注解扫描-->
    <contxt:component-scan base-package="com.wgc.todo.controller" />


    <!--启用 mvc 的常用注解-->
    <mvc:annotation-driven validator="myValidator" />

    <!--将所有的静态资源交还 Servlet 处理-->
    <mvc:default-servlet-handler />

    <!--类型转换器-->
